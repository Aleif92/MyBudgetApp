@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Expenses</h1>
        <br />
        <hr />
        <h3>Total Monthly Expenses $@ViewBag.Expenses</h3>
        <table class="table table-striped table-hover table-bordered shadow">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Value</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var expense in Model)
                    {
                        <tr>
                            <td>
                            @expense.Id
                            </td>
                            <td>
                            @expense.Value.ToString("C")
                            </td>
                            <td>
                            @expense.Description
                            </td>
                            <td>
                                <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                                <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


