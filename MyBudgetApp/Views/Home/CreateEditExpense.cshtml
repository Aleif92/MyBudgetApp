@{
    ViewData["Title"] = "Create / Edit Expense";
}

@model MyBudgetApp.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit an Expense</h1>
</div>

<form asp-action="CreateEditExpense" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="mt-4 mb-2">Value $</label>
        <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" required />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="mt-4 mb-2">Description</label>
        <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-primary mt-4" type="submit">Save</button>
</form>

